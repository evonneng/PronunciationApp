<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.pronunciationapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:screenOrientation="portrait">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:textAlignment="center"
        android:hint="@string/edit_text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="textShortMessage"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="What does the bot say?"
        android:id="@+id/textView"
        android:layout_below="@+id/robotView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:layout_width="179dp"
        android:layout_height="179dp"
        android:id="@+id/robotView"
        android:src="@mipmap/robot"
        android:contentDescription="@string/robot"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160dp"
        android:layout_height="57dp"
        android:hint="@string/button"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:onClick="onClick"
        android:layout_gravity="right|center_vertical" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="160dp"
        android:layout_height="57dp"
        android:hint="@string/language"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="80dp"
        android:spinnerMode="dropdown" />

</FrameLayout>
